{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchCurrentVersion": "!/^0/"
    }
  ],
  "platformCommit": "enabled",
  "postUpdateOptions": [
    "gomodTidy"
  ]
}